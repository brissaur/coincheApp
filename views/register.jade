extends template
block css
block content
	.container
		section
			if session.redirectmessage
				.alert.alert-warning
					strong Aborting! 
					|  #{session.redirectmessage}
				-session.redirectmessage=''
			h1 Sign Up
			form(role='form', action='/register', method='post')
				.form-group
					label(for='email') Email address:
					input#email.form-control(type='email', name='email', autofocus)
				.form-group
					label(for='pwd') Password:
					input#pwd.form-control(type='password', name='pwd')
				.form-group
					label(for='name') User Name:
					input#name.form-control(type='text',name="username")
				button.btn.btn-default(type='submit', onclick="") Submit
block scripts